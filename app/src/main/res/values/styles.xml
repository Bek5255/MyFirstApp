<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewLargeStyle">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14pt</item>
    </style>

    <style name="TextViewTemperatureStyle" parent="TextViewLargeStyle">
        <item name="android:textSize">18pt</item>
    </style>

    <style name="TextViewSmallStyle" parent="TextViewLargeStyle">
        <item name="android:gravity">top|left</item>
        <item name="android:textSize">8pt</item>
    </style>

    <style name="EmptyTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">14pt</item>
    </style>

    <style name="ImageButtonRounder">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:background">@android:drawable/ic_menu_view</item>
        <item name="android:foreground">@drawable/bottom_border</item>
        <item name="android:scaleType">centerInside</item>
    </style>

</resources>