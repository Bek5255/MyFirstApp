<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HumansList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ED8B36"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/image"
            android:layout_width="0in"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:layout_weight="2"
            android:background="@drawable/bottom_border"
            android:foreground="@drawable/bottom_border"
            android:scaleType="centerInside" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewLargeStyle"
                android:layout_marginLeft="16dp"
                android:layout_weight="3"
                android:gravity="bottom"
                android:text="@string/deborah_kim" />

            <TextView
                style="@style/TextViewSmallStyle"
                android:layout_marginLeft="16dp"
                android:layout_weight="3"
                android:text="@string/_185_followers" />

        </LinearLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_menu_add" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F44336"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/image2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:layout_weight="2"
            android:background="@drawable/bottom_border"
            android:foreground="@drawable/bottom_border"
            android:scaleType="centerInside" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewLargeStyle"
                android:layout_marginLeft="16dp"
                android:layout_weight="3"
                android:textSize="11pt"
                android:gravity="bottom"
                android:text="Carherine Murply" />

            <TextView
                style="@style/TextViewSmallStyle"
                android:layout_marginLeft="16dp"
                android:layout_weight="3"
                android:text="@string/no_followers" />

        </LinearLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_menu_add" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#E91E63"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/image3"
            android:layout_width="0in"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:layout_weight="2"
            android:background="@drawable/bottom_border"
            android:foreground="@drawable/bottom_border"
            android:scaleType="centerInside" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewLargeStyle"
                android:layout_marginLeft="16dp"
                android:layout_weight="3"
                android:gravity="bottom"
                android:text="@string/dirk_riese" />

            <TextView
                style="@style/TextViewSmallStyle"
                android:layout_marginLeft="16dp"
                android:layout_weight="3"
                android:text="@string/_185_followers" />

        </LinearLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_menu_add" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#AF055D"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/image4"
            android:layout_width="0in"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:layout_weight="2"
            android:background="@drawable/bottom_border"
            android:foreground="@drawable/bottom_border"
            android:scaleType="centerInside" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewLargeStyle"
                android:layout_marginLeft="16dp"
                android:layout_weight="3"
                android:gravity="bottom"
                android:text="@string/danielle_kim" />

            <TextView
                style="@style/TextViewSmallStyle"
                android:layout_marginLeft="16dp"
                android:layout_weight="3"
                android:text="@string/_45_followers" />

        </LinearLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_menu_add" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#49344C"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/image5"
            android:layout_width="0in"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:layout_weight="2"
            android:background="@drawable/bottom_border"
            android:foreground="@drawable/bottom_border"
            android:scaleType="centerInside" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewLargeStyle"
                android:layout_marginLeft="16dp"
                android:layout_weight="3"
                android:gravity="bottom"
                android:text="Deborah Kim" />

            <TextView
                style="@style/TextViewSmallStyle"
                android:layout_marginLeft="16dp"
                android:layout_weight="3"
                android:text="@string/_185_followers" />

        </LinearLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_menu_add" />
    </LinearLayout>

</LinearLayout>